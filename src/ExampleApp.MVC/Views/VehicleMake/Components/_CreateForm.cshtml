@using ExampleApp.MVC.ViewModels;

@model VehiclesViewModel;

<div>
    <form asp-action="CreateVehicle">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="w-50 mb-3">
            <label asp-for="@Model.VehicleViewModel.Name" class="form-label"></label>
            <input asp-for="@Model.VehicleViewModel.Name" class="form-control">
        </div>
        <div class="w-50 mb-3">
            <label asp-for="@Model.VehicleViewModel.Abbrv" class="form-label"></label>
            <input asp-for="@Model.VehicleViewModel.Abbrv" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>